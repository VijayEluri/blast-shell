<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:cm="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean name="threadIo" class="org.apache.felix.gogo.runtime.threadio.ThreadIOImpl"/>

    <bean name="commandProcessor" class="blast.shell.SpringCommandShell">
        <property name="threadio" ref="threadIo"/>
    </bean>

    <bean id="commandRegistry" class="blast.shell.CommandRegistry">
        <property name="commandShell" ref="commandProcessor"/>
    </bean>

    <bean id="consoleFactory" class="blast.shell.jline.ConsoleFactory">
        <property name="start" value="true"/>
        <property name="terminalFactory" ref="terminalFactory"/>
        <property name="commandRegistry" ref="commandRegistry"/>
    </bean>

    <bean id="terminal"
          factory-bean="terminalFactory"
          factory-method="getTerminal"/>

    <bean id="terminalFactory" class="org.apache.karaf.shell.console.jline.TerminalFactory"
          init-method="init"
          destroy-method="destroy"/>


</beans>
