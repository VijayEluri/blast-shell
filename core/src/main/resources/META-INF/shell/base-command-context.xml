<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:cm="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean name="threadIo" class="org.apache.felix.gogo.runtime.threadio.ThreadIOImpl"/>

    <bean name="commandProcessor" class="org.apache.felix.gogo.runtime.shell.CommandShellImpl">
        <property name="threadio" ref="threadIo"/>
    </bean>

    <bean id="commandCompleter" class="blast.shell.CommandRegistry">
        <property name="commandShell" ref="commandProcessor"/>
    </bean>

    <bean id="consoleFactory" class="blast.shell.jline.ConsoleFactory">
        <property name="start" value="true"/>
        <property name="completers">
            <list>
                <ref local="commandCompleter"/>
            </list>
        </property>
        <property name="terminal" ref="terminal"/>
    </bean>

    <bean id="terminal"
          factory-bean="terminalFactory"
          factory-method="getTerminal"/>

    <bean id="terminalFactory" class="blast.shell.jline.TerminalFactory"
          init-method="init"
          destroy-method="destroy"/>


</beans>
